# Development settings
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database
# Local development (SQLite)
DATABASE_URL=sqlite:///db.sqlite3

# Production database (Code Institute PostgreSQL)
# CI_DATABASE_URL=your_code_institute_database_url_here

# Email settings (Gmail SMTP)
# Leave EMAIL_HOST_USER and EMAIL_HOST_PASSWORD empty to use console backend for development
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=info@wiesbaden-cyclery.de

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WH_SECRET=whsec_your_webhook_secret

# AWS S3 settings (set to False for local development)
USE_AWS=False
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_REGION_NAME=your_region

# Analytics (optional)
GA_MEASUREMENT_ID=G-XXXXXXXXXX
FB_PIXEL_ID=123456789012345